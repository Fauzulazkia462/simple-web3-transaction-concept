<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Web3 Transaction Concept</title>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body style="background-image: url('asset/background.jpg'); background-size: cover;">
        <%- include('../partials/nav') %>
        <div class="container m-10">

            <!-- create account card -->
            <div class="rounded-xl mx-auto shadow-md border-white border bg-transparent place-content-stretch">
                <div class="m-5">
                    <h3 class="text-3xl px-3 py-2 text-cyan-400 font-bold mb-5">Create Account</h3>
                    <form action="/add" method="post" id="addForm">
                        <input type="text" class="rounded px-3 py-2 border shadow w-full block text-sm mb-5" name="name" placeholder="Name">
                        <input type="text" class="rounded px-3 py-2 border shadow w-full block text-sm mb-5" name="balance" placeholder="Balance">
                        <button class="bg-cyan-400 hover:bg-cyan-600 rounded shadow m-3 w-20">Add</button>
                    </form>
                </div>
            </div>
            
            <!-- accounts card -->
            <div class="rounded-xl mx-auto shadow-md border-white border bg-transparent place-content-stretch mt-10">
                <div class="m-5">
                    <h3 class="text-3xl px-3 py-2 text-cyan-400 font-bold mb-5">Accounts Management</h3>
                    <table id="table1">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Public Key</th>
                                <th>Private Key</th>
                                <th>Balance</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% data.forEach(account => { %>
                                <tr>
                                    <td><%= account.name %></td>
                                    <td><%= account.address %></td>
                                    <td><%= account.publicKey %></td>
                                    <td><%= account.privateKey %></td>
                                    <td><%= account.balance %></td>
                                    <td><button class="deleteBtn bg-cyan-400 text-black hover:bg-cyan-600 rounded shadow m-3 w-20 h-8" data-id="<%= account.address %>">Delete</button></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <%- include('../partials/footer') %>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
        <script src="js/script.js"></script>
        <script>
            document.getElementById('homeNav').style.color = "#22d3ef";
        </script>
    </body>
</html>